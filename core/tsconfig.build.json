{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017", "ES2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "target": "es5",
    "sourceMap": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "@testing-library/jest-dom", "i18n-js"],
    "noEmit": false,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
