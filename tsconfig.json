{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017", "ES2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx", "react-i18next.mock.js"],
  "exclude": ["node_modules", "dist", "**/*.config.ts", "**/*.setup.ts"]
}
